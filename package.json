{
  "name": "friday",
  "version": "1.0.0",
  "main": "main.ts",
  "repository": "https://github.com/yuta-97/friday",
  "author": "Yuta <kj2693119@gmail.com>",
  "license": "MIT",
  "scripts": {
    "config:develop": "cp -av envs/default.env .env",
    "config:deploy": "cp -av envs/deploy.env .env",
    "build:clean": "rm -rf build",
    "build:compile": "tsc --build",
    "build:module": "cp -r node_modules build",
    "build": "run-s build:clean build:compile build:module",
    "build:develop": "run-s config:develop build",
    "build:deploy": "run-s config:deploy build",
    "compose:build": "docker-compose build --no-cache friday",
    "compose:push": "docker-compose push friday",
    "deploy:develop": "run-s compose:build compose:push rollout",
    "start": "nodemon --exec ts-node -r tsconfig-paths/register --transpile-only src/main.ts",
    "start:local": "run-s config:develop start",
    "start:develop": "run-s config:develop start:daemon",
    "start:daemon": "node build/main.js",
    "rollout": "kubectl rollout restart deployments friday"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "dotenv": "^17.2.0",
    "minio": "^8.0.5",
    "module-alias": "^2.2.3",
    "mongoose": "^8.16.3",
    "node-telegram-bot-api": "^0.66.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.4",
    "@types/node": "^24.0.14",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.54.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typedi": "^0.10.0",
    "typescript": "^5.8.3"
  }
}
